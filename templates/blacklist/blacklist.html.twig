{% extends 'base.html.twig' %}

{% block title %}Blacklist{% endblock %}
{% block pagetitle %}Blacklist{% endblock %}
{% block pagetitlesmall %}{% endblock %}
{% block pagebartitle %}Blacklist{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('global/datatables/datatables.min.css') }}" rel="stylesheet"
          type="text/css"/>
    <link href="{{ asset('global/datatables/plugins/bootstrap/datatables.bootstrap.css') }}" rel="stylesheet"
          type="text/css"/>
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">Blacklist</span>
                    </div>
                    <div class="tools"></div>
                </div>
                <div class="portlet-body">
                    <div id="all_blacklist_wrapper" class="dataTables_wrapper no-footer">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div id="all_blacklist_filter" class="dataTables_filter">
                                    <label>Search:
                                        <input type="search"
                                               class="form-control input-sm input-small input-inline"
                                               id="search">
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="table-scrollable">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer"
                                   id="all_blacklist" role="grid" style="position: relative;">
                                <thead>
                                <tr role="row">
                                    <th tabindex="0" rowspan="1" colspan="1"
                                    > ID
                                    </th>
                                    <th tabindex="0" rowspan="1" colspan="1"
                                    > First Name
                                    </th>
                                    <th tabindex="0" rowspan="1" colspan="1"
                                    > Last Name
                                    </th>
                                    <th tabindex="0" rowspan="1" colspan="1"
                                    > Nationality
                                    </th>
                                    <th tabindex="0" rowspan="1" colspan="1"
                                    > Blacklisted in
                                    </th>
                                    <th tabindex="0" rowspan="1" colspan="1"
                                    > Actions
                                    </th>
                                </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-sm-12">
                                <div class="dataTables_info" id="records_info" role="status" aria-live="polite"></div>
                            </div>
                            <div class="col-md-7 col-sm-12">
                                <div class="dataTables_paginate paging_bootstrap_number" id="all_blacklist_paginate">
                                    <ul class="pagination"></ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pagination/jquery.twbsPagination.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/pages/datatable-default-render.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/pages/view-all-blacklisted-visitors.js') }}" type="text/javascript"></script>
{% endblock %}