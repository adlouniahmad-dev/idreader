{% extends 'base.html.twig' %}
{% form_theme form 'form/fields.html.twig' %}

{% block title %}Add Building{% endblock %}
{% block pagetitle %}Manage Buildings{% endblock %}
{% block pagetitlesmall %}Add Building{% endblock %}
{% block pagebartitle %}Add Building{% endblock %}

{% block content %}
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-equalizer font-red-sunglo"></i>
                <span class="caption-subject font-red-sunglo bold uppercase">Add Building</span>
            </div>
        </div>

        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
            <div class="form-body">

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            <button class="close" data-close="alert"></button>
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {{ form_row(form.name) }}
                {{ form_row(form.location) }}
                {{ form_row(form.startFloor) }}
                {{ form_row(form.endFloor) }}
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-4">
                        {{ form_widget(form.save) }}
                        {{ form_widget(form.reset) }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
