{% extends 'base.html.twig' %}

{% block title %}View Buildings{% endblock %}
{% block pagetitle %}View Buildings{% endblock %}
{% block pagetitlesmall %}{% endblock %}
{% block pagebartitle %}View Buildings{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('global/datatables/datatables.min.css') }}" rel="stylesheet"
          type="text/css"/>
    <link href="{{ asset('global/datatables/plugins/bootstrap/datatables.bootstrap.css') }}" rel="stylesheet"
          type="text/css"/>
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">View Buildings</span>
                    </div>
                    <div class="tools"></div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer"
                           id="all_buildings" role="grid" aria-describedby="all_buildings_info"
                           style="position: relative;">
                        <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="all_buildings" rowspan="1"
                                colspan="1" aria-sort="ascending"
                                style="width: 50px;"> ID
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="all_buildings" rowspan="1" colspan="1"
                                style="width: 225px;"> Building Name
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="all_buildings" rowspan="1" colspan="1"
                                style="width: 206px;"> Location
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="all_buildings" rowspan="1" colspan="1"
                                style="width: 206px;"> Administrator
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="all_buildings" rowspan="1" colspan="1"
                                style="width: 160px;"> Date Created
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="all_buildings" rowspan="1" colspan="1"
                                style="width: 160px;"> Actions
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/datatable.js') }}" type="text/javascript"></script>
    <script src="{{ asset('global/datatables/datatables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('global/datatables/plugins/bootstrap/datatables.bootstrap.js') }}"
            type="text/javascript"></script>
    <script src="{{ asset('js/pages/view-all-buildings.js') }}" type="text/javascript"></script>
{% endblock %}
