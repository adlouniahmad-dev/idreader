{% extends 'baseGateProfile.html.twig' %}

{% block content %}
    {{ parent() }}
    <div class="profile-content">
        <div class="row">
            <div class="col-md-8 profile-info">
                <div class="portlet light">
                    <div class="portlet-title">
                        <h1 class="font-green sbold uppercase">{{ gate.name }}</h1>
                    </div>
                    <h4 class="block">Security Guards:</h4>
                    <ul class="list-inline">
                        <li>
                            <i class="icon-user"></i>
                            {% if guards|length != 0 %}
                                {% for guard in guards %}
                                    <a href="{{ path('viewProfile', {'userId': guard.user.id}) }}"> {{ guard.user.fullName }}</a>
                                {% endfor %}
                            {% else %}
                                No Guards
                            {% endif %}
                        </li>
                    </ul>
                    <hr>
                    <h4 class="block">Building:</h4>
                    <ul class="list-inline">
                        <li>
                            <i class="fa fa-building-o"></i>
                            <a href="{{ path('viewBuilding', {'buildingId': gate.building.id}) }}"> {{ gate.building.name }}</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4 profile-info">
                <div class="portlet light">
                    <div class="portlet-title">
                        <h1 class="font-red sbold uppercase">Other info</h1>
                    </div>
                    <h4 class="block">Gate created on:</h4>
                    <ul class="list-inline">
                        <li><i class="fa fa-calendar"></i> {{ gate.dateCreated|date('jS F, Y \\a\\t g:ia') }}</li>
                    </ul>
                    <hr>
                    <h4 class="block">Number of Security Guards:</h4>
                    <ul class="list-inline">
                        <li><i class="icon-users"></i> {{ guards|length }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
{% endblock %}

