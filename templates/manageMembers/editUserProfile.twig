{% extends 'baseUserProfile.html.twig' %}
{% form_theme form 'form/fields.html.twig' %}

{% block content %}
    {{ parent() }}
    <div class="profile-content">
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light ">
                    <div class="portlet-title tabbable-line">
                        <div class="caption caption-md">
                            <i class="icon-globe theme-font hide"></i>
                            <span class="caption-subject font-blue-madison bold uppercase">Profile Account</span>
                        </div>
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tab_1_1" data-toggle="tab">Personal Info</a>
                            </li>
                            {% for i in 0..user.roles|length - 1 %}
                                {% if user.roles.get(i).getRoleName == 'fadmin' %}
                                    <li>
                                        <a href="" data-toggle="tab">Administrator Info</a>
                                    </li>
                                {% elseif user.roles.get(i).getRoleName == 'powner' %}
                                    <li>
                                        <a href="" data-toggle="tab">Office Info</a>
                                    </li>
                                {% elseif user.roles.get(i).getRoleName == 'sguard' %}
                                    <li>
                                        <a href="" data-toggle="tab">Device Info</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">

                            <div class="tab-pane active" id="tab_1_1">
                                {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
                                <div class="form-body">

                                    {% for label, messages in app.flashes %}
                                        {% for message in messages %}
                                            <div class="alert alert-{{ label }}">
                                                <button class="close" data-close="alert"></button>
                                                {{ message }}
                                            </div>
                                        {% endfor %}
                                    {% endfor %}

                                    {{ form_row(form.givenName) }}
                                    {{ form_row(form.familyName) }}
                                    {{ form_row(form.gmail) }}
                                    {{ form_row(form.dob) }}
                                    {{ form_row(form.phoneNb) }}

                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-4">
                                            {{ form_widget(form.save, {'label': 'Save'}) }}
                                            {{ form_widget(form.reset) }}
                                        </div>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
{% endblock %}



