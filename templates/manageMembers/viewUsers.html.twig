{% extends 'base.html.twig' %}

{% block title %}View Users{% endblock %}
{% block pagetitle %}View Users{% endblock %}
{% block pagetitlesmall %}{% endblock %}
{% block pagebartitle %}View Users{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('global/datatables/datatables.min.css') }}" rel="stylesheet"
          type="text/css"/>
    <link href="{{ asset('global/datatables/plugins/bootstrap/datatables.bootstrap.css') }}" rel="stylesheet"
          type="text/css"/>
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">View Members</span>
                    </div>
                    <div class="tools"></div>
                </div>
                <div class="portlet-body">
                    <div id="all_users_wrapper" class="dataTables_wrapper no-footer">
                        <div class="table-scrollable">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer"
                                   id="all_users" role="grid" style="position: relative;">
                                <thead>
                                <tr role="row">
                                    <th tabindex="0" rowspan="1" colspan="1"
                                        style="width: 50px;"> ID
                                    </th>
                                    <th tabindex="0" rowspan="1" colspan="1"
                                        style="width: 225px;"> Member Name
                                    </th>
                                    <th tabindex="0" rowspan="1" colspan="1"
                                        style="width: 206px;"> Gmail
                                    </th>
                                    <th tabindex="0" rowspan="1" colspan="1"
                                        style="width: 206px;"> Date of birth
                                    </th>
                                    <th tabindex="0" rowspan="1" colspan="1"
                                        style="width: 160px;"> Role
                                    </th>
                                    <th tabindex="0" rowspan="1" colspan="1"
                                        style="width: 160px;"> Account created on
                                    </th>
                                    <th tabindex="0" rowspan="1" colspan="1"
                                        style="width: 160px;"> Actions
                                    </th>
                                </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-sm-12">
                                <div class="dataTables_info" id="all_users_info" role="status" aria-live="polite"></div>
                            </div>
                            <div class="col-md-7 col-sm-12">
                                <div class="dataTables_paginate paging_bootstrap_number" id="all_users_paginate">
                                    <ul class="pagination"></ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pagination/jquery.twbsPagination.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/pages/datatable-default-render.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/pages/view-all-users.js') }}" type="text/javascript"></script>
{% endblock %}