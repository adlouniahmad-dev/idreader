{% extends 'baseOfficeProfile.html.twig' %}

{% block content %}
    {{ parent() }}
    <div class="profile-content">
        <div class="row">
            <div class="col-md-8 profile-info">
                <div class="portlet light">
                    <div class="portlet-title">
                        <h1 class="font-green sbold uppercase">Office: {{ office.officeNb }}</h1>
                    </div>
                    <h4 class="block">Premise Owner</h4>
                    <ul class="list-inline">
                        <li>
                            <i class="icon-user"></i>
                            {% if office.user != null %}
                                <a href="{{ path('viewProfile', {'userId': office.user.id}) }}"> {{ office.user.fullName }}</a>
                            {% else %}
                                No Premise Owner
                            {% endif %}
                        </li>
                    </ul>
                    <hr>
                    <h4 class="block">Building:</h4>
                    <ul class="list-inline">
                        <li>
                            <i class="fa fa-building-o"></i>
                            <a href="{{ path('viewBuilding', {'buildingId': office.building.id}) }}"> {{ office.building.name }}</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4 profile-info">
                <div class="portlet light">
                    <div class="portlet-title">
                        <h1 class="font-red sbold uppercase">Other info</h1>
                    </div>
                    <h4 class="block">Office created on:</h4>
                    <ul class="list-inline">
                        <li><i class="fa fa-calendar"></i> {{ office.dateCreated|date('jS F, Y \\a\\t g:ia') }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
{% endblock %}

