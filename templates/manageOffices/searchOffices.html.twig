{% extends 'base.html.twig' %}

{% block title %}Search Offices{% endblock %}
{% block pagetitle %}Manage Offices{% endblock %}
{% block pagetitlesmall %}Search Offices{% endblock %}
{% block pagebartitle %}Search Offices{% endblock %}

{% block stylesheets %}
    <link type="text/css" href="{{ asset('global/datatables/datatables.min.js') }}">
    <link type="text/css" href="{{ asset('global/datatables/plugins/bootstrap/datatables.bootstrap.css') }}">
    {{ parent() }}
    <link type="text/css"
          href="{{ asset('js/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.css') }}">
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit portlet-datatable ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject font-dark sbold uppercase">Search Offices</span>
                    </div>

                </div>
                <div class="portlet-body">
                    <div class="table-container">
                        <table class="table table-striped table-bordered table-hover table-checkable"
                               id="datatable_ajax">
                            <thead>
                            <tr role="row" class="heading">
                                <th width="2%">
                                    <input type="checkbox" class="group-checkable">
                                </th>
                                <th width="5%"> ID&nbsp;#</th>
                                <th width="16.6%"> Date Created</th>
                                <th width="16.6%"> Office Number</th>
                                <th width="16.6%"> Member</th>
                                <th width="16.6%"> Building</th>
                                <th width="16.6%"> Floor Number</th>
                                <th width="10%"> Actions</th>
                            </tr>
                            <tr role="row" class="filter">
                                <td></td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="office_id">
                                </td>
                                <td>
                                    <div class="input-group date date-picker margin-bottom-5"
                                         data-date-format="yyyy-mm-dd">
                                        <input type="text" class="form-control form-filter input-sm" readonly
                                               name="office_date_created" placeholder="Date Created">
                                        <span class="input-group-btn">
                                            <button class="btn btn-sm default" type="button">
                                                <i class="fa fa-calendar"></i>
                                            </button>
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm"
                                           name="office_number"></td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm"
                                           name="member_name"></td>
                                <td>
                                    <select name="office_building" class="form-control form-filter input-sm">
                                        {% for building in buildings %}
                                            <option value="{{ building.id }}">{{ building.name }}</option>
                                        {% endfor %}
                                    </select>
                                <td>
                                    <select name="floor_number" class="form-control form-filter input-sm">
                                        <option value="">All</option>
                                        {% for key, floor in floors %}
                                            <option value="{{ key }}">{{ floor }}</option>
                                        {% endfor %}
                                    </select>
                                </td>
                                <td>
                                    <div class="margin-bottom-5">
                                        <button class="btn btn-sm green btn-outline filter-submit margin-bottom">
                                            <i class="fa fa-search"></i> Search
                                        </button>
                                    </div>
                                    <button class="btn btn-sm red btn-outline filter-cancel">
                                        <i class="fa fa-times"></i> Reset
                                    </button>
                                </td>
                            </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/pages/datatable.js') }}"></script>
    <script type="text/javascript" src="{{ asset('global/datatables/datatables.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('global/datatables/plugins/bootstrap/datatables.bootstrap.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('js/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/pages/search_offices.js') }}"></script>
{% endblock %}
